@model System.Collections.Generic.IEnumerable<WebApplication.Controllers.DownFiles>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td>File</td>
            <td>Size</td>
            <td>Progress</td>
            <td>Speed</td>
            <td>URL</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
 

                <td> @item.Name</td>
                <td> @item.Size</td>
                <td>  <div class="progress">
                        <div class="progress-bar" role="progressbar" aria-valuenow="2" aria-valuemin="0" aria-valuemax="100" style="  width: @item.Progress%;">
                            @item.Progress %
                        </div>
                    </div>  </td>
                <td> @item.Speed</td>
                <td> @item.Url</td>
            </tr>
        }
    </tbody>
</table>
    @if(Model.Count()>0){
        
<script>
      setTimeout(function(){
   window.location.reload(1);
}, 5000);  
</script>
    }
 